{% from "macro/actions.html.twig" import actions %}

{% from "macro/table.html.twig" import table %}

{% from "macro/paginator.html.twig" import paginator %}

{% extends 'base.html.twig' %}

{% block title %}Position{% endblock %}

{% block content %}
    <div class="container-fluid px-3">
        <div class="row ">
            <div class="col-md-6">
                <h2 class="mb-4"><strong>{{ title }}</strong></h2>
            </div>
            <div class="col-md-6">
                {% if emptyInstance is not null %}
                    {{ actions(emptyInstance,emptyInstanceActions[constant('ENTITY_CLASS',emptyInstance)]) }}
                {% endif %}
            </div>
        </div>
        <div class="row ">
            <div class="col-md-12">
                {{ table(entityIndex,tableInfo,actions) }}
            </div>
        </div>
        {{ paginator(entityIndex,limit,page) }}
    </div>

{% endblock %}